<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-receipt me-2 text-primary"></i>
        Expenses
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/expenses/add" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Add Expense
        </a>
    </div>
</div>

<!-- Filter Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" class="row g-3">
            <div class="col-md-4">
                <label for="month" class="form-label">Month</label>
                <select name="month" id="month" class="form-select">
                    <option value="">All Months</option>
                    {{#each (array "01" "02" "03" "04" "05" "06" "07" "08" "09" "10" "11" "12") as |monthNum|}}
                    <option value="{{monthNum}}" {{#if (eq ../selectedMonth monthNum)}}selected{{/if}}>
                        {{lookup (array "January" "February" "March" "April" "May" "June" "July" "August" "September" "October" "November" "December") @index}}
                    </option>
                    {{/each}}
                </select>
            </div>
            <div class="col-md-4">
                <label for="year" class="form-label">Year</label>
                <select name="year" id="year" class="form-select">
                    <option value="">All Years</option>
                    <option value="2024" {{#if (eq selectedYear "2024")}}selected{{/if}}>2024</option>
                    <option value="2023" {{#if (eq selectedYear "2023")}}selected{{/if}}>2023</option>
                    <option value="2022" {{#if (eq selectedYear "2022")}}selected{{/if}}>2022</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="fas fa-filter me-1"></i>Filter
                </button>
                <a href="/expenses" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i>Clear
                </a>
            </div>
        </form>
    </div>
</div>

{{#if expenses.length}}
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Expense Name</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each expenses}}
                    <tr>
                        <td>{{formatDate date}}</td>
                        <td>{{name_of_expense}}</td>
                        <td>
                            <span class="badge bg-secondary">{{type}}</span>
                        </td>
                        <td class="fw-bold text-danger">{{formatCurrency amount}}</td>
                        <td>
                            <a href="/expenses/edit/{{id}}" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="POST" action="/expenses/delete/{{id}}" class="d-inline" 
                                  onsubmit="return confirm('Are you sure you want to delete this expense?')">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{else}}
<div class="card">
    <div class="card-body text-center">
        <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
        <h5>No expenses found</h5>
        <p class="text-muted">Start by adding your first expense.</p>
        <a href="/expenses/add" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Add First Expense
        </a>
    </div>
</div>
{{/if}}