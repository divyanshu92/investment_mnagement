<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-{{#if isEdit}}edit{{else}}plus{{/if}} me-2 text-primary"></i>
        {{#if isEdit}}Edit{{else}}Add{{/if}} Expense
    </h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="POST" action="/expenses/{{#if isEdit}}edit/{{expense.id}}{{else}}add{{/if}}">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="date" class="form-label">Date</label>
                            <input type="date" class="form-control" id="date" name="date" 
                                   value="{{#if expense}}{{expense.date}}{{else}}{{getCurrentDate}}{{/if}}" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="amount" class="form-label">Amount (â‚¹)</label>
                            <input type="number" step="0.01" class="form-control" id="amount" name="amount" 
                                   value="{{#if expense}}{{expense.amount}}{{/if}}" required>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="name_of_expense" class="form-label">Expense Name</label>
                        <input type="text" class="form-control" id="name_of_expense" name="name_of_expense" 
                               value="{{#if expense}}{{expense.name_of_expense}}{{/if}}" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="type" class="form-label">Category</label>
                        <select class="form-select" id="type" name="type" required>
                            <option value="">Select Category</option>
                            {{#each categories}}
                            <option value="{{this}}" {{#if (eq this ../expense.type)}}selected{{/if}}>
                                {{this}}
                            </option>
                            {{/each}}
                        </select>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>
                            {{#if isEdit}}Update{{else}}Save{{/if}} Expense
                        </button>
                        <a href="/expenses" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>