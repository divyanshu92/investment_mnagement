<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-piggy-bank me-2 text-success"></i>
        Investments
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/investments/add" class="btn btn-success me-2">
            <i class="fas fa-plus me-1"></i>Add Investment
        </a>
        <a href="/investments/upload" class="btn btn-info">
            <i class="fas fa-upload me-1"></i>Upload CSV
        </a>
    </div>
</div>

<!-- Filter Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" class="row g-3">
            <div class="col-md-4">
                <label for="month" class="form-label">Month</label>
                <input type="text" class="form-control" name="month" id="month" 
                       placeholder="e.g., January" value="{{selectedMonth}}">
            </div>
            <div class="col-md-4">
                <label for="year" class="form-label">Year</label>
                <input type="text" class="form-control" name="year" id="year" 
                       placeholder="e.g., 2024" value="{{selectedYear}}">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="fas fa-filter me-1"></i>Filter
                </button>
                <a href="/investments" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i>Clear
                </a>
            </div>
        </form>
    </div>
</div>

{{#if investments.length}}
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Month</th>
                        <th>SBI Account</th>
                        <th>SBI FD</th>
                        <th>PPF</th>
                        <th>Groww</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each investments}}
                    <tr>
                        <td>{{formatDate date}}</td>
                        <td>{{month}}</td>
                        <td>{{formatCurrency SBI_In_Account}}</td>
                        <td>{{formatCurrency SBI_FD}}</td>
                        <td>{{formatCurrency PPF}}</td>
                        <td>{{formatCurrency Groww}}</td>
                        <td class="fw-bold text-success">
                            {{formatCurrency (add SBI_In_Account SBI_FD PPF Groww)}}
                        </td>
                        <td>
                            <a href="/investments/edit/{{id}}" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="POST" action="/investments/delete/{{id}}" class="d-inline" 
                                  onsubmit="return confirm('Are you sure you want to delete this investment record?')">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{else}}
<div class="card">
    <div class="card-body text-center">
        <i class="fas fa-piggy-bank fa-3x text-muted mb-3"></i>
        <h5>No investments found</h5>
        <p class="text-muted">Start by adding your first investment record.</p>
        <a href="/investments/add" class="btn btn-success me-2">
            <i class="fas fa-plus me-1"></i>Add Investment
        </a>
        <a href="/investments/upload" class="btn btn-info">
            <i class="fas fa-upload me-1"></i>Upload CSV
        </a>
    </div>
</div>
{{/if}}